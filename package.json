{
	"name": "@sitebender/operations",
	"version": "0.0.8",
	"description": "Operations module for configured algorithmic operations.",
	"license": "MIT",
	"author": "Charles F. Munat <coder@craft-code.dev>",
	"type": "module",
	"files": [
		"lib",
		"index.ts"
	],
	"scripts": {
		"build": "tsc --p ./tsconfig-build.json && vite build",
		"build:docs": "tsc && vite build",
		"bump": "pnpm version patch --force",
		"bump:major": "pnpm version major --force",
		"bump:minor": "pnpm version minor --force",
		"check:exports": "pnpx find-unused-exports",
		"check:packages": "pnpx npm-check -u",
		"dep": "pnpm fmt && pnpm lint && pnpm lint:fix && pnpm check:packages && pnpm build && rm -rf .cache .history dist",
		"dev": "vite",
		"fmt": "pnpm prettier . --write",
		"lint": "pnpx oxlint@latest",
		"lint:css": "pnpm stylelint \"public/**/*.css\"",
		"lint:fix": "pnpm stylelint \"public/**/*.css\" --fix",
		"preview": "vite preview",
		"pub": "npm publish --access=public",
		"push": "git add -A && pnpm bump && git push",
		"test": "vitest",
		"test:cov": "vitest --coverage.exclude=temp/** --coverage"
	},
	"dependencies": {
		"fp-ts": "^2.16.5",
		"ts-pattern": "^5.1.0"
	},
	"devDependencies": {
		"@formatjs/intl-getcanonicallocales": "^2.3.0",
		"@formatjs/intl-listformat": "^7.5.5",
		"@formatjs/intl-locale": "^3.4.5",
		"@types/jsdom": "^21.1.6",
		"@types/node": "^20.12.4",
		"@vitest/coverage-v8": "^1.4.0",
		"fast-check": "^3.17.1",
		"jsdom": "^24.0.0",
		"prettier": "^3.2.5",
		"stylelint": "^16.3.1",
		"stylelint-config-standard": "^36.0.0",
		"temporal-polyfill": "^0.2.3",
		"typescript": "^5.4.3",
		"vite": "^5.2.8",
		"vitest": "^1.4.0",
		"vitest-localstorage-mock": "^0.1.2"
	}
}
